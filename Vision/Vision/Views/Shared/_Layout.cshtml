<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Vision</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" />
  <link href="~/css/datatable-style.css" rel="stylesheet" />
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.css" />
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
      <div class="container">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Vision</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse justify-content-between">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="" asp-controller="AccountState" asp-action="Index">Account State</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="" asp-controller="PriceSection" asp-action="Index">Price Section</a>
            </li>
            <li class="nav-item">
              <button type="button" class="btn btn-success" data-toggle="modal" data-target="#buyInModal" onclick="ResetBuyInPopup()">
                Buy In
              </button>
            </li>
            <li class="nav-item">&nbsp;</li>
            <li class="nav-item">
              <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#sellOutModal" onclick="ResetSellOutPopup()">
                Sell Out
              </button>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <button type="button" class="btn btn-info" onclick="UpdatePrice()">
                Update
              </button>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="container-fluid">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  @* Start modal buy *@
   <partial name="BuyInPopUp.cshtml">
  @* End modal buy *@

  @* Start modal sell *@
     <partial name="SellOutPopUp.cshtml">
       @* End modal sell *@

       <footer class="border-top footer text-muted">
         <div class="container">
           &copy; 2020 - Vision - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
         </div>
       </footer>

       <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
       <script src="~/js/site.js" asp-append-version="true"></script>
       <script src="~/js/BuyPopup.js"></script>
       <script src="~/js/SellPopup.js"></script>
       <script src="~/js/UpdatePrice.js"></script>
       <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.21/b-1.6.3/fc-3.3.1/fh-3.1.7/r-2.2.5/sc-2.0.2/sp-1.1.1/sl-1.3.1/datatables.min.js"></script>
       @RenderSection("Scripts", required: false)
</body>
</html>
